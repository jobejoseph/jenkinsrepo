pipeline{
  agent any
  tools {
    terraform 'terraform_13'
  }
  stages{
    stage('Git checkout'){
      steps{
       git 'https://github.com/jobejoseph/jenkinsrepo'
      }
    }
    stage('terraform init'){
      steps{
        sh "terraform init"
      }
    }
   stage('terraform apply'){
      steps{
        sh "terraform apply --auto-approve"
      }
    }
  }
}
